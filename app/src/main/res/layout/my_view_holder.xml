<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <Button
        android:id="@+id/btn_topic_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue_active"
        android:gravity="start|center"
        android:paddingStart="15dp"
        android:shadowColor="@color/shadow"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:text="Topic title"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_preview"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@color/white"
        android:gravity="center_vertical|start"
        android:paddingStart="15dp"
        android:shadowColor="@color/shadow"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="word1, word2, word3, word4"
        android:textColor="@color/blue_active"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_topic_title" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@color/white"
        android:gravity="center_vertical|start"
        android:paddingStart="15dp"
        android:shadowColor="@color/shadow"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="@string/words_counter"
        android:textColor="@color/hint_color"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_preview" />

</androidx.constraintlayout.widget.ConstraintLayout>