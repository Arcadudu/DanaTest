<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_result_screen_dark__1"
    android:padding="10dp"
    tools:context=".ResultActivity">


    <ImageView
        android:id="@+id/iv_next_topic_or_correct_mistakes"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginBottom="30dp"
        android:padding="10dp"
        android:src="@drawable/icon_troubleshooting_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_to_topic_list"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:src="@drawable/icon_to_topics_dark1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_next_topic_or_correct_mistakes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_next_topic_or_correct_mistakes" />

    <TextView
        android:id="@+id/tv_test_passed_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/raleway_light"
        android:gravity="center"
        android:text="Пройден ли тест"
        android:textColor="@color/dark_title_text_color"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_result_img_circle"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/icon_circle_for_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_result_inner_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/icon_result_perfect"
        app:layout_constraintBottom_toBottomOf="@+id/iv_result_img_circle"
        app:layout_constraintEnd_toEndOf="@+id/iv_result_img_circle"
        app:layout_constraintStart_toStartOf="@+id/iv_result_img_circle"
        app:layout_constraintTop_toTopOf="@+id/iv_result_img_circle" />

    <TextView
        android:id="@+id/tv_result_grade_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/raleway_light"
        android:gravity="center"
        android:text="Отлично!"
        android:textColor="@color/dark_title_text_color"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_result_img_circle"
        app:layout_constraintStart_toStartOf="@+id/iv_result_img_circle"
        app:layout_constraintTop_toBottomOf="@+id/iv_result_img_circle" />

    <ImageView
        android:id="@+id/iv_restart_topic"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:src="@drawable/icon_restart_dark1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_next_topic_or_correct_mistakes"
        app:layout_constraintEnd_toStartOf="@+id/iv_next_topic_or_correct_mistakes"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_action_title1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_light"
        android:gravity="center"
        android:text="Заново"
        android:textColor="@color/dark_description_text_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_restart_topic"
        app:layout_constraintStart_toStartOf="@+id/iv_restart_topic"
        app:layout_constraintTop_toBottomOf="@+id/iv_restart_topic" />

    <TextView
        android:id="@+id/tv_action_title2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_light"
        android:gravity="center"
        android:text="Далее"
        android:textColor="@color/dark_description_text_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_next_topic_or_correct_mistakes"
        app:layout_constraintStart_toStartOf="@+id/iv_next_topic_or_correct_mistakes"
        app:layout_constraintTop_toBottomOf="@+id/iv_next_topic_or_correct_mistakes" />

    <TextView
        android:id="@+id/tv_action_title3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_light"
        android:gravity="center"
        android:text="К темам"
        android:textColor="@color/dark_description_text_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_to_topic_list"
        app:layout_constraintStart_toStartOf="@+id/iv_to_topic_list"
        app:layout_constraintTop_toBottomOf="@+id/iv_to_topic_list" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="7dp"
        android:paddingStart="5dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/iv_next_topic_or_correct_mistakes"
        app:layout_constraintEnd_toEndOf="@+id/iv_to_topic_list"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/iv_restart_topic"
        app:layout_constraintTop_toBottomOf="@+id/tv_result_grade_description">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_sb_mistakes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/raleway_light"
                android:textColor="@color/dark_hint_text_color"
                android:textIsSelectable="true"
                android:textSize="22sp" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:id="@+id/iv_show_mistakes2"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_result_grade_description"
        app:layout_constraintTop_toTopOf="@+id/tv_result_grade_description"
        app:layout_constraintStart_toEndOf="@+id/tv_result_grade_description"
        android:src="@drawable/icon_eye_active_dark"/>

