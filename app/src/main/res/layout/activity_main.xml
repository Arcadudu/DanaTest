<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/material_common_background" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:context=".main_selector.MainActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <ImageView
            android:id="@+id/iv_exit_app"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:elevation="5dp"
            android:src="@drawable/material_icon_exit_app2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="5dp"
            android:src="@drawable/material_icon_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_light"
            android:text="@string/home_title"
            android:textColor="@color/material_title_text_color"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.087" />

        <Button
            android:id="@+id/btn_test1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/drawable_rectangle_button_nonselected"
            android:elevation="3dp"
            android:fontFamily="@font/raleway_regular"
            android:gravity="center_horizontal|center"
            android:text="@string/test1_title"
            android:textColor="@color/material_title_text_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_activity_title" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/material_body_background"
            android:elevation="3dp"
            android:fontFamily="@font/raleway_light"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="@string/test1_description"
            android:textColor="@color/material_yellow_transparent"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_test1" />

        <Button
            android:id="@+id/btn_test2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/drawable_rectangle_button_nonselected"
            android:elevation="3dp"
            android:fontFamily="@font/raleway_regular"
            android:gravity="center_horizontal|center"
            android:text="@string/test2_title"
            android:textColor="@color/material_title_text_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/material_body_background"
            android:elevation="3dp"
            android:fontFamily="@font/raleway_light"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="@string/test3_description"
            android:textColor="@color/material_yellow_transparent"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_test3" />

        <Button
            android:id="@+id/btn_test3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/drawable_rectangle_button_nonselected"
            android:elevation="3dp"
            android:fontFamily="@font/raleway_regular"
            android:gravity="center_horizontal|center"
            android:text="@string/test3_title"
            android:textColor="@color/material_title_text_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/btn_test4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/drawable_rectangle_button_nonselected"
            android:elevation="3dp"
            android:fontFamily="@font/raleway_regular"
            android:gravity="center_horizontal|center"
            android:text="@string/test4_title"
            android:textColor="@color/material_title_text_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/material_body_background"
            android:elevation="3dp"
            android:fontFamily="@font/raleway_light"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="@string/test4_description"
            android:textColor="@color/material_yellow_transparent"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_test4" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/material_body_background"
            android:elevation="3dp"
            android:fontFamily="@font/raleway_light"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="@string/test2_description"
            android:textColor="@color/material_yellow_transparent"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_test2" />

        <TextView
            android:id="@+id/tv_topic_counter1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/topics_counter"
            android:textColor="@color/material_description_text_color"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_test1"
            app:layout_constraintEnd_toEndOf="@+id/btn_test1"
            app:layout_constraintTop_toTopOf="@+id/btn_test1" />

        <TextView
            android:id="@+id/tv_topic_counter2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/topics_counter"
            android:textColor="@color/material_description_text_color"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_test2"
            app:layout_constraintEnd_toEndOf="@+id/btn_test2"
            app:layout_constraintTop_toTopOf="@+id/btn_test2" />

        <TextView
            android:id="@+id/tv_topic_counter3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/topics_counter"
            android:textColor="@color/material_description_text_color"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_test3"
            app:layout_constraintEnd_toEndOf="@+id/btn_test3"
            app:layout_constraintTop_toTopOf="@+id/btn_test3" />

        <TextView
            android:id="@+id/tv_topic_counter4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/topics_counter"
            android:textColor="@color/material_description_text_color"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_test4"
            app:layout_constraintEnd_toEndOf="@+id/btn_test4"
            app:layout_constraintTop_toTopOf="@+id/btn_test4" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>